{
  "name": "acme/modernmodule",
  "description": "Symfony-first PrestaShop 8/9 module skeleton",
  "type": "prestashop-module",
  "license": "AFL-3.0",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6 || ^10.5",
    "prestashop/php-dev-tools": "^4.0",
    "phpstan/phpstan": "^1.11"
  },
  "autoload": {
    "psr-4": {
      "PrestaShop\\Module\\ModernModule\\": "src/"
    },
    "classmap": [
      "modernmodule.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\ModernModule\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml.dist",
    "csfix": "php-cs-fixer fix --allow-risky=yes",
    "stan": "phpstan analyse src --memory-limit=1G"
  },
  "config": {
    "sort-packages": true
  }
}
